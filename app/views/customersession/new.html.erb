<div class="container" style="margin-top: 130px;">
<div class="space-1"></div>
<div class="space-1"></div>
<div class="space-1"></div>
<div class="login-form-border">
	<div class="space-1"></div>
	<div class="space-1"></div>
	<div class="login-form">
		<h1 class="login-header">Login</h1>
		<div class="space-1"></div>

		<%= form_for(:customer, url: customersession_index_path, class: 'form-inline my-2 my-lg-0', style: 'text-align: center;') do |form| %>
			<div style="text-align: center; width: 100%;">
		      <%= search_field_tag :email, params[:email], placeholder: "Email", class: "form-control mr-sm-2" %><br/>
		      <div style="height: 5px;"></div>
		      <%= password_field_tag :password, params[:password], placeholder: "Password", class: "form-control mr-sm-2" %><br/>
		      <div style="height: 5px;"></div> 
		      <div class="input-group-btn" style="margin-bottom: 1rem;">  
		        <button onClick="logging();" type="submit" class="btn btn-info log-btn">
		        	Submit
		    	</button>  
	     	  </div>  
	    	</div>  

  		<% end %>

	</div>
</div>
<hr>
<div style="text-align: center">
	<span style="font-size: 12px; color: gray; text-align: center;">New to us?</span>
		<%= link_to 'Register', new_customer_path %>
</div>
<div class="space-1"></div>
<div class="space-1"></div>
</div>

<script type="text/javascript">
	function logging() {
		$( ".log-btn" ).append( "<i class='fa fa-sync fa-spin'></i>" );
	}
</script>