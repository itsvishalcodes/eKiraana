<div class="container" style="margin-top: 130px;">
<p id="notice"><%= notice %></p>

<h1>Dealers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.dealerpersonalinfo.try(:shopname) %></td>
        <td><%= dealer.dealerpersonalinfo.try(:rating) %></td>
        <td><%= dealer.dealerpersonalinfo.try(:phone) %></td>
        <td><%= dealer.try(:email) %></td>
        <%= link_to 'Show', dealer_products_path(dealer) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dealer', new_dealer_path %>
</div>
