<div class="container" style="margin-top: 130px;">
<% if session[:customer_id] %>	
	<div class="row homepage-top-block" style="min-height: 100px;">
		<div class="col-7 col-sm-7 col-md-7">
			<b>Delivering to: </b><br>
			<%= current_user.customerpersonalinfo.address %><br>
		</div>
		<%= link_to editadd_path, class: 'col-2 col-sm-2 col-md-2' do %>
			<div class="btn btn-outline-primary btn-sm" style="margin-top: 1.4rem;">
				<span class="fa fa-pen"></span>
			</div>
		<% end %>
		<div class="col-3 col-sm-3 col-md-3" style="overflow: hidden; padding: 0;">
			<%= image_tag('delivery-bike-logo.png', size: 100) %>
		</div>
	</div>
<% else %>
	<div class="servicableornot">
		We can't check if we are servicable in your region. Please log in to get products according to your location.<br><br>
		<%= form_for(:homepage, url: check_servicable_path, :remote => true, class: 'availability-check-form form-inline my-2 my-lg-0', style: 'text-align: center;') do |form| %>
				<div class="float-left" style="width: 75%;">
		      		<%= phone_field_tag :pincode, params[:pincode], placeholder: "Enter your area pincode", class: "form-control mr-sm-2" %>
		      	</div>
		      	<div class="input-group-btn float-left" style="margin-bottom: 1rem; width: 25%;">  
		        	<button onClick="checking();" type="submit" class="btn btn-info check-btn">
		        		Check
		    		</button>  
	     	  	</div>
  		<% end %>
	</div>
  	<div class="servicable">
  		We are available in your region. üòç Log in and place your first order.
  	</div>
  	<div class="notservicable">
  		We are currently not available in your region. üòî We are expanding fast and hoping to reach maximum people as soon as possible.
  	</div>
<% end %>
