<div class="container" style="margin-top: 130px;">
<div style="width: 100%; margin: 7rem auto 0;">
  <%= form_for(:customerpersonalinfo, url: editaddpost_path, class: 'form-inline my-2 my-lg-0', style: 'text-align: center;') do |form| %>

    <div style="text-align: center; width: 100%;">
      <%= search_field_tag :name, params[:name], placeholder: "Name", class: "form-control mr-sm-2" %><br/>
      <div style="height: 5px;"></div>
      <%= search_field_tag :phone, params[:phone], placeholder: "Phone", class: "form-control mr-sm-2" %><br/>
      <div style="height: 5px;"></div>
      <%= search_field_tag :address, params[:address], placeholder: "Address", class: "form-control mr-sm-2" %><br/>
      <div style="height: 5px;"></div>
      <div class="input-group-btn">  
        <%= button_tag "Submit", :class => 'btn btn-info',:name => nil%>  
      </div>  
    </div>  

  <% end %>
</div>
</div>